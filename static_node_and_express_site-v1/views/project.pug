extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= `${project.project_name}`

        p= `${project.description}`

      .project-tech-links-box.box
        h6 Technologies
        ul

          each technology in project.technologies 
            li= technology

        a.btn-link(href=`${project.live_link}`) Live Demo
        a.btn-link(href=`${project.github_link}`) GitHub Repo

    .project-img-box.box

      img.project-img(src=`${project.image_url[0]}`, alt='')
      img.project-img(src=`${project.image_url[1]}`, alt='')
      
      if project.image_url[2]
        img.project-img(src=`${project.image_url[2]}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
